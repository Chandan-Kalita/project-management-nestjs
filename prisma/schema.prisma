// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(uuid())
  phoneNumber String?    @unique
  name        String?
  email       String
  password    String
  userType    UserType   @default(USER)
  proposals   Proposal[] @relation("userToProposal")
}

model Proposal {
  id                  String                    @id @default(uuid())
  project_title       String
  project_description String
  objective           String
  duration            Int
  budget              Int
  state               String
  district            String
  bank_name           String
  ifsc_code           String
  account_number      String
  income_source       String
  income              String
  land_size           Int
  photo_path          String
  address_proof_path  String
  income_proof_path   String
  user_id             String
  user                User                      @relation("userToProposal", fields: [user_id], references: [id])
  prevVersionId       String?
  prevVersion         Proposal?                 @relation("prevVersionRelation", fields: [prevVersionId], references: [id])
  childVersions       Proposal[]                @relation("prevVersionRelation")
  status              ProposalStatus            @default(PENDING)
  adminComment        String?
  rejectionReason     ProposalRejectionReason[]
}

enum ProposalRejectionReason {
  project_title
  project_description
  objective
  duration
  budget
  state
  district
  bank_name
  ifsc_code
  account_number
  income_source
  income
  land_size
  photo
  address_proof
  income_proof
}

enum ProposalStatus {
  ACCEPTED
  REJECTED
  PENDING
}

enum UserType {
  ADMIN
  USER
}
